@{
    ViewData["Title"] = "Home Page";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-md-6">
            <h1>Manage all your contacts in one place.</h1>
            <p>
                A simple, fast, and scalable address book that helps
                you manage your contacts easily at the click of a button.
            </p>
            <p class="fw-bold">
                Built with ASP.NET Core, C#, .NET 6, MVC, Bootstrap, and Postgres SQL.
            </p>
            <p class="fw-bold">
                Hosted with Heroku, CI/CD with Github.
            </p>
        </div>
        <div class="col-12 col-md-6 order-first order-md-last">
            <img src="~/img/AddressBook.png" class="img-fluid" alt="Address Book Logo" />
        </div>
    </div>
</div>
