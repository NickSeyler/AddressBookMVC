@model AddressBookMVC.Models.Contact

@{
    ViewData["Title"] = "Create";
}

<h1>Add Contact</h1>

<form asp-action="Create" asp-controller="Contacts" method="post" enctype="multipart/form-data" class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group col-12 col-md-4">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-4">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-4">
        <label asp-for="Birthday" class="control-label"></label>
        <input asp-for="Birthday" class="form-control" />
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-6">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-6">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group col-12">
        <label asp-for="Address1" class="control-label"></label>
        <input asp-for="Address1" class="form-control" />
        <span asp-validation-for="Address1" class="text-danger"></span>
    </div>
    <div class="form-group col-12">
        <label asp-for="Address2" class="control-label"></label>
        <input asp-for="Address2" class="form-control" />
        <span asp-validation-for="Address2" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-6">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-4">
        <label asp-for="State" class="control-label"></label>
        <select asp-for="State" asp-items="ViewBag.StatesList" class="form-control"></select>
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group col-12 col-md-2">
        <label asp-for="ZipCode" class="control-label"></label>
        <input asp-for="ZipCode" class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFile" class="control-label"></label>
        <input asp-for="ImageFile" class="form-control mb-2" accept=".png,.jpg,.jpeg,.gif"
                onchange="document.getElementById('contactImage').src = window.URL.createObjectURL(this.files[0])" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
        @if (Model?.ImageData != null)
        {
            <img id="contactImage" class="img-fluid img-thumbnail" style="width:100px;height:100px" src="data:image/*;base64,@(Convert.ToBase64String(Model.ImageData))">
        }
        else
        {
            <img id="contactImage" class="img-fluid img-thumbnail" style="width:100px;height:100px" src="https://cdn.icon-icons.com/icons2/233/PNG/512/Contacts_26253.png">
        }
    </div>
    <div class="form-group py-2">
        <label for="Categories" class="control-label">Add Contact to Categories</label>
        <select name="CategoryList" class="form-control" asp-items="ViewBag.CategoryList" multiple></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Add New Contact" class="glass-button text-light" />
        <a asp-action="Index" class="glass-button">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
