@using AddressBookMVC.Services.Interfaces
@model AddressBookMVC.Models.Contact
@inject IImageService _imageService;

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1>Contact Details</h1>
    <div class="glass-style glass-style-dark p-2">

        <div class="row">
            <div class="col-12 col-md-4">
                @if(Model?.ImageData != null)
                {
                    <img src="@_imageService.ConvertByteArrayToFile(Model.ImageData, Model.ImageType)" class="img-fluid contact-list-image" alt="@Html.DisplayFor(m => m.FirstName)  @Html.DisplayFor(m => m.LastName)">
                }
                else
                {
                    <img src="https://cdn.icon-icons.com/icons2/233/PNG/512/Contacts_26253.png" class="img-fluid contact-list-image" alt="Default Image">
                }
            </div>
            <div class="col-12 col-md-8">
                <div class="row gy-2">
                    <div class="col-12 col-md-6">
                        <label for="FirstName" class="form-label">First Name</label>
                        <input type="text" readonly class="form-control" id="FirstName" value ="@Model?.FirstName"/>
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="LastName" class="form-label">Last Name</label>
                        <input type="text" readonly class="form-control" id="LastName" value ="@Model?.LastName"/>
                    </div>
                    <div class="col-12">
                        <label for="Birthday" class="form-label">Birthday</label>
                        <input type="text" readonly class="form-control" id="Birthday" value ="@Model?.Birthday"" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" readonly class="form-control" id="Email" value ="@Model?.Email"/>
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="Phone" class="form-label">Phone</label>
                        <input type="tel" readonly class="form-control" id="Phone" value ="@Model?.PhoneNumber"/>
                    </div>
                    <div class="col-12">
                        <label for="Address1" class="form-label">Address 1</label>
                        <input type="text" readonly class="form-control" id="Address1" value ="@Model?.Address1"/>
                    </div>
                    <div class="col-12">
                        <label for="Address2" class="form-label">Address 2</label>
                        <input type="text" readonly class="form-control" id="Address2" value ="@Model?.Address2"/>
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="City" class="form-label">City</label>
                        <input type="text" readonly class="form-control" id="City" value ="@Model?.City"" />
                    </div>
                    <div class="col-12 col-md-4">
                        <label for="State" class="form-label">State</label>
                        <input type="text" readonly class="form-control" id="State" value ="@Model?.State"" />
                    </div>
                    <div class="col-12 col-md-2">
                        <label for="ZipCode" class="form-label">Zip</label>
                        <input type="text" readonly class="form-control" id="ZipCode" value ="@Model?.ZipCode"" />
                    </div>
                    <div class="col-12">
                        @foreach (var category in Model!.Categories)
                        {
                            <div class="form-check form-check-inline">
                                <input type="checkbox" disabled class="form-check-input" value="@category.Id"/>
                                <label for="CategoryList" class="form-check-label">@category.Name</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="glass-button text-light mt-2">Edit</a>
    <a asp-action="Index" class="glass-button text-light mt-2">Back to Contacts</a>
</div>
